<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net472</TargetFrameworks>
    <AssemblyName>GcodeParserSharp</AssemblyName>
    <RootNamespace>AndreasReitberger</RootNamespace>
    <Authors>Andreas Reitberger</Authors>
    <Description>A simple C# Gcode parser to read gcodes and get out the filament volume and estimated print time.</Description>
    <Copyright>Andreas Reitberger</Copyright>
    <PackageTags>Gcode, Parser, Sharp, Printtime, Filament, Volume</PackageTags>
    <PackageProjectUrl>https://github.com/AndreasReitberger/GcodeParserSharp</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HelixToolkit" Version="2.17.0" />
    <PackageReference Include="HelixToolkit.Wpf" Version="2.17.0" Condition="$(TargetFramework.StartsWith('net4'))" />
    <PackageReference Include="HelixToolkit.Wpf.SharpDX" Version="2.17.0" Condition="$(TargetFramework.StartsWith('net4'))" />
    <PackageReference Include="OctoPrintSharpApi" Version="1.0.8" />
    <PackageReference Include="UtilitiesSharpLibrary" Version="1.0.0" />
  </ItemGroup>

</Project>
